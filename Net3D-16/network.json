{
    "params":
    {
        "learning_rate" : 0.0001,
        "num_epochs" : 30,
        "l2_reg_weights" : 0.3,
        "l2_reg_biases" : 0.1,
        "decay_step" : 1000,
        "decay_rate" : 0.96,
        "min_prob" : 0.0,
        "keep_prob" : 0.45,
        "input_shape" : [16,16,16,1],
        "batch_size" : 16,
        "num_classes" : 5
    },

    "layers":
    [
        {
            "name" : "conv0",
            "filter" : [5,5,5,1,4],
            "stride" : [1,1,1,1,1],
            "activation" : "relu",
            "padding" : "valid",
            "dropout" : "yes"
        },

        {
            "name" : "conv1",
            "filter" : [5,5,5,4,8],
            "stride" : [1,1,1,1,1],
            "activation" : "relu",
            "padding" : "valid",
            "dropout" : "yes",
            "maxpool" : "yes"
        },

        {
            "name" : "conv2",
            "filter" : [4,4,4,8,16],
            "stride" : [1,1,1,1,1],
            "activation" : "relu",
            "padding" : "valid"
        },

        {
            "name" : "conv3",
            "filter" : [1,1,1,16,5],
            "stride" : [1,1,1,1,1],
            "padding" : "valid"
        }
    ]

}